{
  "manifest_version": 3,
  "name": "Squasher Tab Manager",
  "version": "1.2",
  "description": "Manage all open tabs in a spreadsheet-style UI",
  "permissions": ["tabs", "activeTab", "storage", "scripting", "windows"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "images/icon16.png",
      "48": "images/icon48.png",
      "128": "images/icon128.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "images/icon16.png",
    "48": "images/icon48.png",
    "128": "images/icon128.png"
  }
}
